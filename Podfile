platform :ios, '8.0'

use_frameworks!

target 'EjercicioMercadoLibre' do

# For avoiding keyboard when a textfield becomes first responder
# Github: https://github.com/michaeltyson/TPKeyboardAvoiding
pod 'TPKeyboardAvoiding', '~> 1.2'

# Asynchronous image loading framework.
# Github: https://github.com/ibireme/YYWebImage
pod 'YYWebImage', '~> 1.0'

# Alamofire: Elegant networking in Swift
# https://github.com/Alamofire/Alamofire
pod 'Alamofire', '~> 3.3'
    
# ObjectMapper: A framweork to convert model objects to and from JSON
# https://github.com/Hearst-DD/ObjectMapper/
pod 'ObjectMapper', '~> 1.2'
    
# SVProgressHUD is a clean and easy-to-use HUD meant to display the progress of an ongoing task on iOS and tvOS.
# Github: https://github.com/SVProgressHUD/SVProgressHUD
pod 'SVProgressHUD'

# NYAlertViewController is a replacement for UIAlertController/UIAlertView with support for content views and UI customization.
# Github: https://github.com/nealyoung/NYAlertViewController
pod 'NYAlertViewController'

# A drop-in UITableView/UICollectionView superclass category for showing empty datasets whenever the view has no content to display
# Github: https://github.com/dzenbot/DZNEmptyDataSet
pod 'DZNEmptyDataSet'

end